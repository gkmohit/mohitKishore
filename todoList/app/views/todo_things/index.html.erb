<h1>Listing todo_things</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_things.each do |todo_thing| %>
      <tr>
        <td><%= todo_thing.title %></td>
        <td><%= todo_thing.description %></td>
        <td><%= link_to 'Show', todo_thing %></td>
        <td><%= link_to 'Edit', edit_todo_thing_path(todo_thing) %></td>
        <td><%= link_to 'Destroy', todo_thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

